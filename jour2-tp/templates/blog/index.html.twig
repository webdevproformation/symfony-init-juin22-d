{% extends "front.html.twig" %}

{% block title %} Bienvenu {{ parent()}} {% endblock %}

{% block body %}
    <main class="container mt-4">
    <div class="row">
        {%  for article in articles %}
            {% if loop.first %}
                <article class="col-12 d-flex align-items-center">
                    <img src="{{article.img}}" alt="" class="w-50 img-fluid">
                    <div class="w-50 ms-4">
                        <h2>{{article.titre}}</h2>
                        <p>{{article.contenu}}</p>
                    </div>
                </article>
            {% else  %}
                <article class="col-4 my-4">
                    <img src="{{article.img}}" alt="" class="img-fluid">
                    <h3 class="text-center">{{article.titre}}</h3>
                </article>
            {% endif  %}
        {% endfor %}
    </div>
    </main>
{% endblock %}